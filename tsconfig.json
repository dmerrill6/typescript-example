{
  "compilerOptions": {
    "strict": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "declaration": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
  }
}
